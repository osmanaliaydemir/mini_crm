@page "/Error/500"
@model CRM.Web.Pages.Error.InternalServerErrorModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Localizer["Error_500_Title"];
    Response.StatusCode = 500;
}

@section Styles {
    <link rel="stylesheet" href="~/css/error/error.css" asp-append-version="true" />
}

<div class="error-container">
    <div class="error-content">
        <div class="error-icon error-icon-server">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="120" height="120" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
            </svg>
        </div>
        <h1 class="error-code">500</h1>
        <h2 class="error-title">@Localizer["Error_500_Title"]</h2>
        <p class="error-description">
            @Localizer["Error_500_Description"]
        </p>
        @if (Model.ShowRequestId)
        {
            <p class="error-request-id">
                <strong>@Localizer["Error_RequestId"]:</strong>
                <code>@Model.RequestId</code>
            </p>
        }
        <div class="error-actions">
            <a asp-page="/Dashboard/Index" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                </svg>
                @Localizer["Error_GoHome"]
            </a>
            <button onclick="window.location.reload()" class="btn btn-ghost">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                </svg>
                @Localizer["Error_Reload"]
            </button>
        </div>
    </div>
</div>

