@page
@model CRM.Web.Pages.Users.ChangePasswordModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Localizer["Users_Form_ChangePassword_Title"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/users/form.css" asp-append-version="true" />
}

<section class="page-header form-header">
    <div>
        <h1>@Localizer["Users_Form_ChangePassword_Title"]</h1>
        <p class="subtitle">@string.Format(Localizer["Users_Form_ChangePassword_Subtitle"].Value, Model.UserName)</p>
    </div>
    <div class="header-actions">
        <a class="btn btn-ghost" asp-page="Edit" asp-route-id="@Model.UserId">@Localizer["Common_Back"]</a>
    </div>
</section>

<form method="post" class="form-shell" novalidate>
    <input type="hidden" asp-for="Input.UserId" />
    <div asp-validation-summary="ModelOnly" class="form-validation-summary"></div>

    <div class="form-sections">
        <section class="form-card">
            <header>
                <h2>@Localizer["Users_Form_Password_Title"]</h2>
                <p>@Localizer["Users_Form_Password_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Input.NewPassword">@Localizer["Users_Field_NewPassword"]</label>
                    <input asp-for="Input.NewPassword" type="password" class="input-control" />
                    <span asp-validation-for="Input.NewPassword" class="input-error"></span>
                    <small>@Localizer["Users_Field_Password_Help"]</small>
                </div>
                <div class="input-field">
                    <label asp-for="Input.ConfirmPassword">@Localizer["Users_Field_ConfirmPassword"]</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="input-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="input-error"></span>
                </div>
            </div>
        </section>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">@Localizer["Users_Action_ChangePassword"]</button>
        <a asp-page="Edit" asp-route-id="@Model.UserId" class="btn btn-ghost">@Localizer["Common_Cancel"]</a>
    </div>
</form>

