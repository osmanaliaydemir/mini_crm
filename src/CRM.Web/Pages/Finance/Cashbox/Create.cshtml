@page
@model CRM.Web.Pages.Finance.Cashbox.CreateModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Localizer["Finance_Cashbox_Form_Header_Create"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/finance/cashbox/form.css" asp-append-version="true" />
}

<section class="page-header form-header">
    <div>
        <h1>@Localizer["Finance_Cashbox_Form_Header_Create"]</h1>
        <p class="subtitle">@Localizer["Finance_Cashbox_Form_Create_Subtitle"]</p>
    </div>
    <div class="header-actions">
        <a class="btn btn-ghost" asp-page="Index">@Localizer["Finance_Cashbox_Form_Cancel"]</a>
    </div>
</section>

<form method="post" class="form-shell" novalidate>
    <div asp-validation-summary="ModelOnly" class="form-validation-summary"></div>

    <div class="form-sections">
        <section class="form-card">
            <header>
                <h2>@Localizer["Finance_Cashbox_Form_Transaction_Title"]</h2>
                <p>@Localizer["Finance_Cashbox_Form_Transaction_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Input.TransactionDate"></label>
                    <input asp-for="Input.TransactionDate" class="input-control" type="datetime-local" />
                    <span asp-validation-for="Input.TransactionDate" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.TransactionType"></label>
                    <select asp-for="Input.TransactionType" class="input-control" asp-items="Model.TransactionTypeOptions"></select>
                    <span asp-validation-for="Input.TransactionType" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.Amount"></label>
                    <input asp-for="Input.Amount" class="input-control" type="number" step="0.01" min="0.01" />
                    <span asp-validation-for="Input.Amount" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.Currency"></label>
                    <select asp-for="Input.Currency" class="input-control" asp-items="Model.CurrencyOptions"></select>
                    <span asp-validation-for="Input.Currency" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.Category"></label>
                    <select asp-for="Input.Category" class="input-control" asp-items="Model.CategoryOptions"></select>
                    <span asp-validation-for="Input.Category" class="input-error"></span>
                </div>
                <div class="input-field full">
                    <label asp-for="Input.Description"></label>
                    <textarea asp-for="Input.Description" class="input-control textarea" rows="3"></textarea>
                    <span asp-validation-for="Input.Description" class="input-error"></span>
                </div>
            </div>
        </section>

        <section class="form-card">
            <header>
                <h2>@Localizer["Finance_Cashbox_Form_Association_Title"]</h2>
                <p>@Localizer["Finance_Cashbox_Form_Association_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Input.RelatedCustomerId"></label>
                    <select asp-for="Input.RelatedCustomerId" class="input-control" asp-items="Model.CustomerOptions">
                        <option value="">@Localizer["Finance_Cashbox_Form_SelectCustomer"]</option>
                    </select>
                    <span asp-validation-for="Input.RelatedCustomerId" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.RelatedShipmentId"></label>
                    <select asp-for="Input.RelatedShipmentId" class="input-control" asp-items="Model.ShipmentOptions">
                        <option value="">@Localizer["Finance_Cashbox_Form_SelectShipment"]</option>
                    </select>
                    <span asp-validation-for="Input.RelatedShipmentId" class="input-error"></span>
                </div>
            </div>
        </section>
    </div>

    <footer class="form-actions">
        <a class="btn btn-ghost" asp-page="Index">@Localizer["Finance_Cashbox_Form_Cancel"]</a>
        <button type="submit" class="btn btn-primary">@Localizer["Finance_Cashbox_Form_Submit"]</button>
    </footer>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

