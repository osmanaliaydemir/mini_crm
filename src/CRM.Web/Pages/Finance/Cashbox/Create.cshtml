@page
@model CRM.Web.Pages.Finance.Cashbox.CreateModel

@{
    ViewData["Title"] = "Yeni Kasa Hareketi";
}

<div class="col-lg-6">
    <div class="dashboard-section border-0 shadow-sm">
        <h2 class="mb-3">@ViewData["Title"]</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Input.TransactionDate" class="form-label"></label>
                <input asp-for="Input.TransactionDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="Input.TransactionDate" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.TransactionType" class="form-label"></label>
                <select asp-for="Input.TransactionType" class="form-select" asp-items="Model.TransactionTypeOptions"></select>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.Amount" class="form-label"></label>
                    <input asp-for="Input.Amount" class="form-control" />
                    <span asp-validation-for="Input.Amount" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.Currency" class="form-label"></label>
                    <input asp-for="Input.Currency" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Category" class="form-label"></label>
                <input asp-for="Input.Category" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Input.Description" class="form-label"></label>
                <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.RelatedCustomerId" class="form-label"></label>
                    <select asp-for="Input.RelatedCustomerId" class="form-select" asp-items="Model.CustomerOptions">
                        <option value="">Seçiniz...</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.RelatedShipmentId" class="form-label"></label>
                    <select asp-for="Input.RelatedShipmentId" class="form-select" asp-items="Model.ShipmentOptions">
                        <option value="">Seçiniz...</option>
                    </select>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-secondary" asp-page="Index">İptal</a>
                <button type="submit" class="btn btn-brand">Kaydet</button>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

