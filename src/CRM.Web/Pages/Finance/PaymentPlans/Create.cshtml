@page
@model CRM.Web.Pages.Finance.PaymentPlans.CreateModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Localizer["Finance_PaymentPlans_Form_Header_Create"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/finance/payment-plans/form.css" asp-append-version="true" />
}

<section class="page-header form-header">
    <div>
        <h1>@Localizer["Finance_PaymentPlans_Form_Header_Create"]</h1>
        <p class="subtitle">@Localizer["Finance_PaymentPlans_Form_Create_Subtitle"]</p>
    </div>
    <div class="header-actions">
        <a class="btn btn-ghost" asp-page="Index">@Localizer["Finance_PaymentPlans_Form_Cancel"]</a>
    </div>
</section>

<form method="post" class="form-shell" novalidate>
    <div asp-validation-summary="ModelOnly" class="form-validation-summary"></div>

    <div class="form-sections">
        <section class="form-card">
            <header>
                <h2>@Localizer["Finance_PaymentPlans_Form_General_Title"]</h2>
                <p>@Localizer["Finance_PaymentPlans_Form_General_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Input.CustomerId"></label>
                    <select asp-for="Input.CustomerId" class="input-control" asp-items="Model.CustomerOptions">
                        <option value="">@Localizer["Finance_PaymentPlans_Form_SelectCustomer"]</option>
                    </select>
                    <span asp-validation-for="Input.CustomerId" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.ShipmentId"></label>
                    <select asp-for="Input.ShipmentId" class="input-control" asp-items="Model.ShipmentOptions">
                        <option value="">@Localizer["Finance_PaymentPlans_Form_SelectShipment"]</option>
                    </select>
                    <span asp-validation-for="Input.ShipmentId" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.PlanType"></label>
                    <select asp-for="Input.PlanType" class="input-control" asp-items="Model.PlanTypeOptions"></select>
                </div>
            </div>
        </section>

        <section class="form-card">
            <header>
                <h2>@Localizer["Finance_PaymentPlans_Form_Financial_Title"]</h2>
                <p>@Localizer["Finance_PaymentPlans_Form_Financial_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Input.TotalAmount"></label>
                    <input asp-for="Input.TotalAmount" class="input-control" />
                    <span asp-validation-for="Input.TotalAmount" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.Currency"></label>
                    <input asp-for="Input.Currency" class="input-control" />
                    <span asp-validation-for="Input.Currency" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.StartDate"></label>
                    <input asp-for="Input.StartDate" class="input-control" type="date" />
                    <span asp-validation-for="Input.StartDate" class="input-error"></span>
                </div>
            </div>
        </section>

        <section class="form-card">
            <header>
                <h2>@Localizer["Finance_PaymentPlans_Form_Schedule_Title"]</h2>
                <p>@Localizer["Finance_PaymentPlans_Form_Schedule_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Input.PeriodicityWeeks"></label>
                    <input asp-for="Input.PeriodicityWeeks" class="input-control" />
                    <span asp-validation-for="Input.PeriodicityWeeks" class="input-error"></span>
                </div>
                <div class="input-field full">
                    <label asp-for="Input.Notes"></label>
                    <textarea asp-for="Input.Notes" class="input-control textarea" rows="3"></textarea>
                    <span asp-validation-for="Input.Notes" class="input-error"></span>
                </div>
            </div>
        </section>

        <section class="form-card">
            <header class="form-card__header">
                <div>
                    <h2>@Localizer["Finance_PaymentPlans_Form_Installments_Title"]</h2>
                    <p>@Localizer["Finance_PaymentPlans_Form_Installments_Subtitle"]</p>
                </div>
                <button type="button" class="btn btn-ghost" id="generateInstallments">
                    @Localizer["Finance_PaymentPlans_Form_Generate_Button"]
                </button>
            </header>
            <div id="installments-container" class="installments-grid">
                <!-- dynamic installments -->
            </div>
        </section>
    </div>

    <footer class="form-actions">
        <a class="btn btn-ghost" asp-page="Index">@Localizer["Finance_PaymentPlans_Form_Cancel"]</a>
        <button type="submit" class="btn btn-primary">@Localizer["Finance_PaymentPlans_Form_Submit"]</button>
    </footer>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/finance/payment-plans/create.js" asp-append-version="true"></script>
}

