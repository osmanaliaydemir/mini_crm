@page
@model CRM.Web.Pages.Auth.ForgotPasswordModel
@using CRM.Web
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    Layout = null;
    ViewData["Title"] = Localizer["Login_ForgotPassword"];
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Localizer["Login_ForgotPassword"] Â· @Localizer["AppTitle"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/templateV2/login/login-minimal.css" asp-append-version="true" />
</head>
<body class="login-minimal forgot-password">
    <div class="brand-ribbon brand-ribbon--one" data-depth="0.26" data-range="60" style="--ribbon-rotation:10deg"></div>
    <div class="brand-ribbon brand-ribbon--two" data-depth="0.2" data-range="60" style="--ribbon-rotation:-18deg"></div>
    <div class="brand-glow brand-glow--one" data-depth="0.14" data-range="40"></div>
    <div class="brand-glow brand-glow--two" data-depth="0.1" data-range="40"></div>
    <div class="brand-orbit" data-depth="0.16" data-range="45"></div>
    <div class="brand-particles" data-depth="0.06" data-range="30"></div>

    <div class="minimal-shell">
        <div class="minimal-card">
            <div class="minimal-logo">
                <img src="~/images/gms_logo.png" asp-append-version="true" alt="GMS Logo" />
            </div>

            <div class="minimal-heading">
                <h2>@Localizer["Login_ForgotPassword"]</h2>
                <p>@Localizer["ForgotPassword_Info"]</p>
            </div>

            <form method="post" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-field">
                    <label class="form-label" for="email">@Localizer["ForgotPassword_Email"]</label>
                    <div class="form-control">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 8l9 6 9-6" />
                            <path d="M5 19h14a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2z" />
                        </svg>
                        <input asp-for="Input.Email" id="email" class="form-input" autocomplete="email" placeholder="sen@firma.com" />
                    </div>
                    <div class="error-message visible-on-invalid">
                        <span class="error-dot"></span>
                        <span asp-validation-for="Input.Email"></span>
                    </div>
                </div>

                <button type="submit" class="primary-button">
                    @Localizer["Login_ForgotPassword"]
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" width="16" height="16">
                        <path d="M17 8l4 4-4 4" />
                        <path d="M3 12h18" />
                    </svg>
                </button>

                <div class="form-foot forgot-actions">
                    <a href="@Url.Page("/Auth/Login")">@Localizer["Navigation_Login"]</a>
                </div>
            </form>

            <p class="minimal-note">@Localizer["ForgotPassword_Footer","GMS Portal"]</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/templateV2/login/login-minimal.js" asp-append-version="true" defer></script>
</body>
</html>

