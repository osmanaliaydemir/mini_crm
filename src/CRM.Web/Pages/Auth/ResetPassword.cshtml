@page
@model CRM.Web.Pages.Auth.ResetPasswordModel
@using CRM.Web
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    Layout = null;
    ViewData["Title"] = "Şifre Sıfırlama";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Şifre Sıfırlama · @Localizer["AppTitle"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/templateV2/login/login-minimal.css" asp-append-version="true" />
</head>
<body class="login-minimal reset-password">
    <div class="brand-ribbon brand-ribbon--one" data-depth="0.26" data-range="60" style="--ribbon-rotation:10deg"></div>
    <div class="brand-ribbon brand-ribbon--two" data-depth="0.2" data-range="60" style="--ribbon-rotation:-18deg"></div>
    <div class="brand-glow brand-glow--one" data-depth="0.14" data-range="40"></div>
    <div class="brand-glow brand-glow--two" data-depth="0.1" data-range="40"></div>
    <div class="brand-orbit" data-depth="0.16" data-range="45"></div>
    <div class="brand-particles" data-depth="0.06" data-range="30"></div>

    <div class="minimal-shell">
        <div class="minimal-card">
            <div class="minimal-logo">
                <img src="~/images/gms_logo.png" asp-append-version="true" alt="GMS Logo" />
            </div>

            <div class="minimal-heading">
                <h2>Şifre Sıfırlama</h2>
                <p>Yeni şifrenizi belirleyin</p>
            </div>

            @if (!Model.IsValidToken)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Hata:</strong> Şifre sıfırlama bağlantısı geçersiz veya süresi dolmuş. 
                    <a href="@Url.Page("/Auth/ForgotPassword")">Yeni bir şifre sıfırlama talebinde bulunun</a>.
                </div>
            }

            <form method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Input.Email" />
                <input type="hidden" asp-for="Input.Token" />
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-field">
                    <label class="form-label" for="password">Yeni Şifre</label>
                    <div class="form-control">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 11c1.657 0 3-1.567 3-3.5S13.657 4 12 4 9 5.567 9 7.5 10.343 11 12 11z" />
                            <path d="M18 21v-2a6 6 0 1 0-12 0v2" />
                        </svg>
                        <input asp-for="Input.Password" id="password" class="form-input" type="password" autocomplete="new-password" placeholder="••••••••" />
                        <button type="button" class="toggle-visibility" data-toggle="password">Göster</button>
                    </div>
                    <div class="error-message visible-on-invalid">
                        <span class="error-dot"></span>
                        <span asp-validation-for="Input.Password"></span>
                    </div>
                </div>

                <div class="form-field">
                    <label class="form-label" for="confirmPassword">Yeni Şifre (Tekrar)</label>
                    <div class="form-control">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 11c1.657 0 3-1.567 3-3.5S13.657 4 12 4 9 5.567 9 7.5 10.343 11 12 11z" />
                            <path d="M18 21v-2a6 6 0 1 0-12 0v2" />
                        </svg>
                        <input asp-for="Input.ConfirmPassword" id="confirmPassword" class="form-input" type="password" autocomplete="new-password" placeholder="••••••••" />
                        <button type="button" class="toggle-visibility" data-toggle="confirmPassword">Göster</button>
                    </div>
                    <div class="error-message visible-on-invalid">
                        <span class="error-dot"></span>
                        <span asp-validation-for="Input.ConfirmPassword"></span>
                    </div>
                </div>

                <button type="submit" class="primary-button" @(Model.IsValidToken ? "" : "disabled")>
                    Şifremi Sıfırla
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" width="16" height="16">
                        <path d="M17 8l4 4-4 4" />
                        <path d="M3 12h18" />
                    </svg>
                </button>

                <div class="form-foot forgot-actions">
                    <a href="@Url.Page("/Auth/Login")">@Localizer["Navigation_Login"]</a>
                </div>
            </form>

            <p class="minimal-note">GMS Portal için güvenli şifre sıfırlama.</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/templateV2/login/login-minimal.js" asp-append-version="true" defer></script>
    <script>
        // Şifre görünürlük toggle
        document.querySelectorAll('.toggle-visibility').forEach(button => {
            button.addEventListener('click', function() {
                const field = this.getAttribute('data-toggle');
                const input = document.getElementById(field === 'password' ? 'password' : 'confirmPassword');
                if (input.type === 'password') {
                    input.type = 'text';
                    this.textContent = 'Gizle';
                } else {
                    input.type = 'password';
                    this.textContent = 'Göster';
                }
            });
        });
    </script>
</body>
</html>

