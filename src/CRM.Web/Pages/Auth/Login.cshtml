@page
@model CRM.Web.Pages.Auth.LoginModel
@using CRM.Web
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Navigation_Login"];
}

<section class="row justify-content-center">
    <div class="col-lg-5 col-md-8">
        <div class="dashboard-section border-0 shadow-sm">
            <div class="text-center">
                <img src="~/images/gms_logo.png" class="login-logo" asp-append-version="true" alt="GMS Logo" />
            </div>
            <h2 class="mb-1">@Localizer["Navigation_Login"]</h2>
            <p class="text-secondary mb-4">@Localizer["Login_Subtitle","Kereste operasyon paneli"]</p>

            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="mb-3">
                    <label class="form-label" for="Input_UserNameOrEmail">@Localizer["Login_UserName"]</label>
                    <input asp-for="Input.UserNameOrEmail" class="form-control form-control-lg" autocomplete="username" />
                    <span asp-validation-for="Input.UserNameOrEmail" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Input_Password">@Localizer["Login_Password"]</label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" type="password" autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" for="Input_RememberMe">@Localizer["Login_RememberMe"]</label>
                    </div>
                    <a class="small text-decoration-none" asp-page="/Auth/ForgotPassword">@Localizer["Login_ForgotPassword"]</a>
                </div>
                <button type="submit" class="btn btn-lg btn-brand w-100">@Localizer["Navigation_Login"]</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

