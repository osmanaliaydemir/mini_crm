@inject SignInManager<ApplicationUser> SignInManager
@inject CRMDbContext DbContext

@{
    var isAuthenticated = SignInManager.IsSignedIn(User);
    var rawUserName = User.Identity?.Name;
    var userDisplayName = isAuthenticated
        ? (!string.IsNullOrWhiteSpace(rawUserName) ? rawUserName : "Kullanƒ±cƒ±")
        : null;
    var userInitial = isAuthenticated
        ? (string.IsNullOrWhiteSpace(userDisplayName) ? "?" : userDisplayName.Trim()[0].ToString().ToUpperInvariant())
        : null;
    var roleSummary = isAuthenticated
        ? string.Join(", ", User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value))
        : string.Empty;

    var currentCulture = CultureInfo.CurrentUICulture;
    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
    var encodedReturnUrl = Uri.EscapeDataString(returnUrl);

    string CultureShortName(string cultureName) => cultureName switch
    {
        "tr-TR" => "TR",
        "en-US" => "EN",
        "ar-SA" => "AR",
        _ => "TR"
    };

    var layoutLang = CultureShortName(currentCulture.Name);
    var layoutDir = currentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? string.Empty;
    var hideStatusBar = string.Equals(currentPage, "/Index", StringComparison.OrdinalIgnoreCase);

    bool IsActive(string page) =>
        string.Equals(currentPage, page, StringComparison.OrdinalIgnoreCase);

    bool IsInSection(string sectionPrefix) =>
        currentPage.StartsWith(sectionPrefix, StringComparison.OrdinalIgnoreCase);

    var shipmentsTotalCount = DbContext?.Shipments.Count() ?? 0;

    decimal cashIncomeTotal = 0m;
    decimal cashExpenseTotal = 0m;
    decimal cashNetBalance = 0m;
    DateTime? cashLastTransaction = null;

    if (DbContext is not null)
    {
        cashIncomeTotal = DbContext.CashTransactions
            .Where(t => t.TransactionType == CashTransactionType.Income)
            .Sum(t => (decimal?)t.Amount) ?? 0m;

        cashExpenseTotal = DbContext.CashTransactions
            .Where(t => t.TransactionType == CashTransactionType.Expense)
            .Sum(t => (decimal?)t.Amount) ?? 0m;

        cashNetBalance = cashIncomeTotal - cashExpenseTotal;

        cashLastTransaction = DbContext.CashTransactions
            .OrderByDescending(t => t.TransactionDate)
            .Select(t => (DateTime?)t.TransactionDate)
            .FirstOrDefault();
    }

    string FormatCurrency(decimal value) => value.ToString("C2", currentCulture);
    var cashLastTransactionDisplay = cashLastTransaction?.ToLocalTime().ToString("dd MMM HH:mm", currentCulture);
    var cashNetPositive = cashNetBalance >= 0;
}

