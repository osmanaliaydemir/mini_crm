@page "{id:guid}"
@model CRM.Web.Pages.Suppliers.EditModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Localizer["Suppliers_Form_Header_Edit"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/suppliers/form.css" asp-append-version="true" />
}

<section class="page-header form-header">
    <div>
        <h1>@Localizer["Suppliers_Form_Header_Edit"]</h1>
        <p class="subtitle">@Localizer["Suppliers_Form_Edit_Subtitle"]</p>
    </div>
    <div class="header-actions">
        <a class="btn btn-ghost" asp-page="Index">@Localizer["Suppliers_Action_Back"]</a>
    </div>
</section>

<form method="post" class="form-shell" novalidate>
    <input type="hidden" asp-for="Supplier.Id" />
    <div asp-validation-summary="ModelOnly" class="form-validation-summary"></div>

    <div class="form-sections">
        <section class="form-card">
            <header>
                <h2>@Localizer["Suppliers_Form_Company_Title"]</h2>
                <p>@Localizer["Suppliers_Form_Company_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label for="Supplier_Name">@Localizer["Suppliers_Field_Name"]</label>
                    <input asp-for="Supplier.Name" class="input-control" id="Supplier_Name" />
                    <span asp-validation-for="Supplier.Name" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label for="Supplier_Country">@Localizer["Suppliers_Field_Country"]</label>
                    <input asp-for="Supplier.Country" class="input-control" id="Supplier_Country" />
                    <span asp-validation-for="Supplier.Country" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label for="Supplier_TaxNumber">@Localizer["Suppliers_Field_TaxNumber"]</label>
                    <input asp-for="Supplier.TaxNumber" class="input-control" id="Supplier_TaxNumber" />
                    <span asp-validation-for="Supplier.TaxNumber" class="input-error"></span>
                </div>
            </div>
        </section>

        <section class="form-card">
            <header>
                <h2>@Localizer["Suppliers_Form_Contact_Title"]</h2>
                <p>@Localizer["Suppliers_Form_Contact_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label for="Supplier_ContactEmail">@Localizer["Suppliers_Field_Email"]</label>
                    <input asp-for="Supplier.ContactEmail" class="input-control" id="Supplier_ContactEmail" />
                    <span asp-validation-for="Supplier.ContactEmail" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label for="Supplier_ContactPhone">@Localizer["Suppliers_Field_Phone"]</label>
                    <input asp-for="Supplier.ContactPhone" class="input-control" id="Supplier_ContactPhone" />
                    <span asp-validation-for="Supplier.ContactPhone" class="input-error"></span>
                </div>
            </div>
        </section>

        <section class="form-card">
            <header>
                <h2>@Localizer["Suppliers_Form_Other_Title"]</h2>
                <p>@Localizer["Suppliers_Form_Other_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label for="Supplier_AddressLine">@Localizer["Suppliers_Field_Address"]</label>
                    <input asp-for="Supplier.AddressLine" class="input-control" id="Supplier_AddressLine" />
                    <span asp-validation-for="Supplier.AddressLine" class="input-error"></span>
                </div>
                <div class="input-field full">
                    <label for="Supplier_Notes">@Localizer["Suppliers_Field_Notes"]</label>
                    <textarea asp-for="Supplier.Notes" class="input-control textarea" id="Supplier_Notes" rows="3"></textarea>
                    <span asp-validation-for="Supplier.Notes" class="input-error"></span>
                </div>
            </div>
        </section>
    </div>

    <footer class="form-actions">
        <a class="btn btn-ghost" asp-page="Index">@Localizer["Suppliers_Form_Cancel"]</a>
        <button type="submit" class="btn btn-primary">@Localizer["Suppliers_Form_Submit"]</button>
    </footer>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

