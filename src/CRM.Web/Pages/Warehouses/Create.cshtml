@page
@model CRM.Web.Pages.Warehouses.CreateModel

@{
    ViewData["Title"] = "Depo Ekle";
}

<div class="col-lg-6">
    <div class="dashboard-section border-0 shadow-sm">
        <h2 class="mb-3">@ViewData["Title"]</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Warehouse.Name" class="form-label"></label>
                <input asp-for="Warehouse.Name" class="form-control" />
                <span asp-validation-for="Warehouse.Name" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Warehouse.Location" class="form-label"></label>
                <input asp-for="Warehouse.Location" class="form-control" />
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Warehouse.ContactPerson" class="form-label"></label>
                    <input asp-for="Warehouse.ContactPerson" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Warehouse.ContactPhone" class="form-label"></label>
                    <input asp-for="Warehouse.ContactPhone" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Warehouse.Notes" class="form-label"></label>
                <textarea asp-for="Warehouse.Notes" class="form-control" rows="3"></textarea>
            </div>
            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-secondary" asp-page="Index">Ä°ptal</a>
                <button type="submit" class="btn btn-brand">Kaydet</button>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

