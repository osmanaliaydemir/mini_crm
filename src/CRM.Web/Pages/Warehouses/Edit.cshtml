@page "{id:guid}"
@model CRM.Web.Pages.Warehouses.EditModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Localizer["Warehouses_Form_Header_Edit"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/warehouses/form.css" asp-append-version="true" />
}

<section class="page-header form-header">
    <div>
        <h1>@Localizer["Warehouses_Form_Header_Edit"]</h1>
        <p class="subtitle">@Localizer["Warehouses_Form_Edit_Subtitle"]</p>
    </div>
    <div class="header-actions">
        <a class="btn btn-ghost" asp-page="Index">@Localizer["Warehouses_Action_Back"]</a>
    </div>
</section>

<form method="post" class="form-shell" novalidate>
    <input type="hidden" asp-for="Warehouse.Id" />
    <div asp-validation-summary="ModelOnly" class="form-validation-summary"></div>

    <div class="form-sections">
        <section class="form-card">
            <header>
                <h2>@Localizer["Warehouses_Form_General_Title"]</h2>
                <p>@Localizer["Warehouses_Form_General_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Warehouse.Name">@Localizer["Warehouses_Field_Name"]</label>
                    <input asp-for="Warehouse.Name" class="input-control" />
                    <span asp-validation-for="Warehouse.Name" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Warehouse.Location">@Localizer["Warehouses_Field_Location"]</label>
                    <input asp-for="Warehouse.Location" class="input-control" />
                    <span asp-validation-for="Warehouse.Location" class="input-error"></span>
                </div>
            </div>
        </section>

        <section class="form-card">
            <header>
                <h2>@Localizer["Warehouses_Form_Contact_Title"]</h2>
                <p>@Localizer["Warehouses_Form_Contact_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Warehouse.ContactPerson">@Localizer["Warehouses_Field_ContactPerson"]</label>
                    <input asp-for="Warehouse.ContactPerson" class="input-control" />
                    <span asp-validation-for="Warehouse.ContactPerson" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Warehouse.ContactPhone">@Localizer["Warehouses_Field_ContactPhone"]</label>
                    <input asp-for="Warehouse.ContactPhone" class="input-control" />
                    <span asp-validation-for="Warehouse.ContactPhone" class="input-error"></span>
                </div>
            </div>
        </section>

        <section class="form-card">
            <header>
                <h2>@Localizer["Warehouses_Form_Other_Title"]</h2>
                <p>@Localizer["Warehouses_Form_Other_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field full">
                    <label asp-for="Warehouse.Notes">@Localizer["Warehouses_Field_Notes"]</label>
                    <textarea asp-for="Warehouse.Notes" class="input-control textarea" rows="3"></textarea>
                    <span asp-validation-for="Warehouse.Notes" class="input-error"></span>
                </div>
            </div>
        </section>
    </div>

    <footer class="form-actions">
        <a class="btn btn-ghost" asp-page="Index">@Localizer["Warehouses_Form_Cancel"]</a>
        <button type="submit" class="btn btn-primary">@Localizer["Warehouses_Form_Submit"]</button>
    </footer>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
