@page "{id:guid}"
@model CRM.Web.Pages.Shipments.EditModel
@using CRM.Web
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = Localizer["Shipments_Form_Header_Edit"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/shipments/edit.css" asp-append-version="true" />
}

<section class="page-header form-header">
    <div>
        <h1>@Localizer["Shipments_Form_Header_Edit"]</h1>
        <p class="subtitle">@Localizer["Shipments_Form_Edit_Subtitle"]</p>
    </div>
    <div class="header-actions">
        <a class="btn btn-ghost" asp-page="Index">@Localizer["Shipments_Action_Back"]</a>
    </div>
</section>

<form method="post" class="form-shell" novalidate>
    <input type="hidden" asp-for="Input.Id" />
    <div asp-validation-summary="ModelOnly" class="form-validation-summary"></div>

    <div class="form-sections">
        <section class="form-card">
            <header>
                <h2>@Localizer["Shipments_Form_General_Info"]</h2>
                <p>@Localizer["Shipments_Form_General_Info_Subtitle"]</p>
            </header>
            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Input.SupplierId">@Localizer["Shipments_Form_Supplier"]</label>
                    <select asp-for="Input.SupplierId" asp-items="Model.SupplierOptions" class="input-control"></select>
                    <span asp-validation-for="Input.SupplierId" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.CustomerId">@Localizer["Shipments_Form_Customer"]</label>
                    <select asp-for="Input.CustomerId" asp-items="Model.CustomerOptions" class="input-control">
                        <option value="">@Localizer["Shipments_Form_SelectCustomer"]</option>
                    </select>
                    <span asp-validation-for="Input.CustomerId" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.ReferenceNumber">@Localizer["Shipments_Form_Reference"]</label>
                    <input asp-for="Input.ReferenceNumber" class="input-control" />
                    <span asp-validation-for="Input.ReferenceNumber" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.Status">@Localizer["Shipments_Form_Status"]</label>
                    <select asp-for="Input.Status" asp-items="Model.StatusOptions" class="input-control"></select>
                    <span asp-validation-for="Input.Status" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.ShipmentDate">@Localizer["Shipments_Form_ShipmentDate"]</label>
                    <input asp-for="Input.ShipmentDate" type="date" class="input-control" />
                    <span asp-validation-for="Input.ShipmentDate" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.EstimatedArrival">@Localizer["Shipments_Form_EstimatedArrival"]</label>
                    <input asp-for="Input.EstimatedArrival" type="date" class="input-control" />
                    <span asp-validation-for="Input.EstimatedArrival" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.LoadingPort">@Localizer["Shipments_Form_LoadingPort"]</label>
                    <input asp-for="Input.LoadingPort" class="input-control" />
                    <span asp-validation-for="Input.LoadingPort" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.DischargePort">@Localizer["Shipments_Form_DischargePort"]</label>
                    <input asp-for="Input.DischargePort" class="input-control" />
                    <span asp-validation-for="Input.DischargePort" class="input-error"></span>
                </div>
                <div class="input-field full">
                    <label asp-for="Input.Notes">@Localizer["Shipments_Form_Notes"]</label>
                    <textarea asp-for="Input.Notes" rows="3" class="input-control textarea"></textarea>
                    <span asp-validation-for="Input.Notes" class="input-error"></span>
                </div>
            </div>
        </section>

        <section class="form-card">
            <header>
                <h2>@Localizer["Shipments_Form_Stage_Header"]</h2>
                <p>@Localizer["Shipments_Form_Stage_Subtitle"]</p>
            </header>
            <div class="form-grid narrow">
                <div class="input-field">
                    <label asp-for="Input.StageStartedAt">@Localizer["Shipments_Form_StageStart"]</label>
                    <input asp-for="Input.StageStartedAt" type="datetime-local" class="input-control" />
                    <span asp-validation-for="Input.StageStartedAt" class="input-error"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Input.StageCompletedAt">@Localizer["Shipments_Form_StageComplete"]</label>
                    <input asp-for="Input.StageCompletedAt" type="datetime-local" class="input-control" />
                    <span asp-validation-for="Input.StageCompletedAt" class="input-error"></span>
                </div>
                <div class="input-field full">
                    <label asp-for="Input.StageNotes">@Localizer["Shipments_Form_StageNotes"]</label>
                    <input asp-for="Input.StageNotes" class="input-control" />
                    <span asp-validation-for="Input.StageNotes" class="input-error"></span>
                </div>
            </div>
        </section>
    </div>

    <footer class="form-actions">
        <a class="btn btn-ghost" asp-page="Details" asp-route-id="@Model.Input.Id">@Localizer["Shipments_Form_Cancel"]</a>
        <button type="submit" class="btn btn-primary">@Localizer["Shipments_Form_Submit"]</button>
    </footer>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

